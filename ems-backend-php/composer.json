{
  "name": "ems-backend/php-backend",
  "description": "Employee Management System - PHP Backend",
  "type": "project",
  "require": {
    "php": ">=7.4",
    "mongodb/mongodb": "^1.15",
    "firebase/php-jwt": "^6.0",
    "vlucas/phpdotenv": "^5.5",
    "respect/validation": "^2.2",
    "slim/slim": "^4.0",
    "slim/psr7": "^1.6",
    "monolog/monolog": "^3.0",
    "guzzlehttp/guzzle": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "EMS\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public",
    "test": "phpunit"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
